<Window x:Class="WpfHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSayHello" Content="Click Me" HorizontalAlignment="Left" Height="43" Margin="309,130,0,0" VerticalAlignment="Top" Width="195" Click="btnSayHello_Click"/>
        <TextBox x:Name="tbShowHello" HorizontalAlignment="Left" Height="46" Margin="194,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="413" TextChanged="tbShowHello_TextChanged"/>
    </Grid>
</Window>
